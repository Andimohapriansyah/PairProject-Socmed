<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Post - Aligram</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen font-sans text-gray-800 bg-gray-100">
  <header class="bg-teal-900 text-white shadow-lg p-4 text-center">
    <h1 class="text-2xl md:text-3xl font-bold">Aligram</h1>
  </header>
  <main class="container mx-auto p-4">
    <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
      <h1 class="text-2xl font-semibold text-teal-900 mb-6">Add New Post</h1>
      <% if (errors.length > 0) { %>
        <ul class="mb-4">
          <% errors.forEach(error => { %>
            <li class="text-red-500"><%= error %></li>
          <% }) %>
        </ul>
      <% } %>
      <form action="/posts/add" method="post" class="space-y-4">
        <div>
          <label for="title" class="block font-semibold mb-1">Title:</label>
          <input type="text" id="title" name="title" required class="w-full p-2 border rounded-md">
        </div>
        <div>
          <label for="content" class="block font-semibold mb-1">Content:</label>
          <textarea id="content" name="content" required class="w-full p-2 border rounded-md h-24 resize-y"></textarea>
        </div>
        <div>
          <label for="imgUrl" class="block font-semibold mb-1">Image URL:</label>
          <input type="url" id="imgUrl" name="imgUrl" required class="w-full p-2 border rounded-md">
        </div>
        <div>
          <label class="block font-semibold mb-1">Tags:</label>
          <div class="space-y-2">
            <% tags.forEach(tag => { %>
              <div class="flex items-center">
                <input type="checkbox" name="tags" value="<%= tag.id %>" id="tag-<%= tag.id %>" class="mr-2">
                <label for="tag-<%= tag.id %>"><%= tag.name %></label>
              </div>
            <% }) %>
          </div>
        </div>
        <button type="submit" class="w-full bg-teal-500 text-white p-2 rounded-md hover:bg-teal-700 transition">SUBMIT</button>
      </form>
      <a href="/posts" class="block text-center mt-4 text-teal-500 hover:underline">Back to Posts</a>
    </div>
  </main>
</body>
</html>